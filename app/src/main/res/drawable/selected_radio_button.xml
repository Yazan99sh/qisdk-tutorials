<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="35dp" /> <!-- Rounded corners -->
            <solid android:color="#000000" /> <!-- Semi-transparent black for shadow -->
        </shape>
    </item>

    <!-- Main circle layer -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White color for the main circle -->
            <corners android:radius="35dp" /> <!-- Rounded corners -->
            <stroke android:width="1.5dp" android:color="#000000" /> <!-- Black border around the circle -->
        </shape>
    </item>

</layer-list>