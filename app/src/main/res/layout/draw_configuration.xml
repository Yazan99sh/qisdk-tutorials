<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.331">

        <TextView
            android:id="@+id/select_lucky_draw_text"
            android:layout_width="720dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="1"
            android:text="@string/select_lucky_winners"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.114" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="65dp" />
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- GridLayout for Numbered Circles -->
            <GridLayout
                android:id="@+id/circle_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="10"
                android:layout_marginBottom="16dp"/>

            <!-- Radio Buttons (Online/Offline) -->
            <RadioGroup
                android:id="@+id/draw_type_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/radio_online"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:text="Online"
                    android:background="@drawable/radio_background"
                    android:padding="12dp"
                    android:buttonTint="#00BBF1"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/radio_offline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offline"
                    android:background="@drawable/radio_background"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:buttonTint="#00BBF1"
                    android:layout_marginStart="16dp" />
            </RadioGroup>
        </LinearLayout>
        <Button
            android:id="@+id/select_winners"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/papper_background_button"
            android:padding="12dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="Select Winners"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_form"
            app:layout_constraintVertical_bias="0.139" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>